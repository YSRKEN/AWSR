<Window
	x:Class="AWSR.Views.MainView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:AWSR.Views"
	mc:Ignorable="d"
	Title="航空戦シミュレーションR" Height="350" Width="525">
	<Grid>
		<StackPanel Margin="10,10,10,10">
			<Button Content="デッキビルダーを開く" Command="{Binding OpenDeckBuilderCommand}"
					Width="100" Height="24" Margin="0,0,0,10" HorizontalAlignment="Left"/>
			<TextBox Text="{Binding InputDeckBuilderText, UpdateSourceTrigger=PropertyChanged}"
					 Width="200" Height="24"  Margin="0,0,0,10" HorizontalAlignment="Left"
					 AcceptsReturn="True"/>
			<TextBox Text="{Binding DeckBuilderInfoText, Mode=OneWay}"
					 Width="200" Height="200" Margin="0,0,0,10" HorizontalAlignment="Left"
					 IsReadOnly="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" />
		</StackPanel>
	</Grid>
</Window>
